\<FORM NAME="Calc">

<INPUT TYPE="text"   NAME="box" Size="16">
<br>
<TR>
<TD>
<INPUT TYPE="button" NAME="1"   VALUE="  1  " OnClick="Calc.box.value += '1'">
<INPUT TYPE="button" NAME="2"   VALUE="  2  " OnCLick="Calc.box.value += '2'">
<INPUT TYPE="button" NAME="3" VALUE="  3  " OnClick="Calc.box.value += '3'">
<INPUT TYPE="button" NAME="plus"  VALUE="  +  " OnClick="Calc.box.value += ' + '">
<br>
<INPUT TYPE="button" NAME="four"  VALUE="  4  " OnClick="Calc.box.value += '4'">
<INPUT TYPE="button" NAME="five"  VALUE="  5  " OnCLick="Calc.box.value += '5'">
<INPUT TYPE="button" NAME="six"   VALUE="  6  " OnClick="Calc.box.value += '6'">
<INPUT TYPE="button" NAME="minus" VALUE="  -  " OnClick="Calc.box.value += ' - '">
<br>
<INPUT TYPE="button" NAME="seven" VALUE="  7  " OnClick="Calc.box.value += '7'">
<INPUT TYPE="button" NAME="eight" VALUE="  8  " OnCLick="Calc.box.value += '8'">
<INPUT TYPE="button" NAME="nine"  VALUE="  9  " OnClick="Calc.box.value += '9'">
<INPUT TYPE="button" NAME="times" VALUE="  x  " OnClick="Calc.box.value += ' * '">
<br>
<INPUT TYPE="button" NAME="clear" VALUE="  c  " OnClick="Calc.box.value = ''">
<INPUT TYPE="button" NAME="zero"  VALUE="  0  " OnClick="Calc.box.value += '0'">
<INPUT TYPE="button" NAME="DoIt"  VALUE="  =  " OnClick="Calc.box.value = eval(Calc.box.value)">
<INPUT TYPE="button" NAME="div"   VALUE="  /  " OnClick="Calc.box.value += ' / '">
<br>
